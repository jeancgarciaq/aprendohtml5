//Ingresar la información a la base de datos, primero se verifica si es de Venezuela
if ($paises == 'Venezuela'){
	//Se verifica el numero de idenficacion
	$nuevo_registro = mysqli_query($mysqli, "SELECT Identificacion FROM Inscripcion where Identificacion='$identificacion'");
